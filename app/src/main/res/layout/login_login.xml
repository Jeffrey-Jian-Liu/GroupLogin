<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/main_LinearLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:gravity="center"
        android:text="@string/login_groups"
        android:textSize="@dimen/main_FontSizeBig"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/main_colorAccent"
        android:gravity="center"
        android:hint="@string/login_login_email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="@dimen/main_FontSizeMiddle" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/main_colorAccent"
        android:gravity="center"
        android:hint="@string/login_login_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="@dimen/main_FontSizeMiddle" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/login_login_submit"
        android:textSize="@dimen/main_FontSizeMiddle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textSize="@dimen/main_FontSizeMiddle"
        android:visibility="gone" />

</LinearLayout>
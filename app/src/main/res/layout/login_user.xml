<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/main_LinearLayout">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_colorAccent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp"
        android:background="@color/main_colorAccentLight" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/main_colorAccent"
        android:gravity="start"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="@dimen/main_FontSizeMiddle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_check"
            android:textColor="@android:color/black"
            android:textSize="@dimen/main_FontSizeSmall" />

        <CheckBox
            android:id="@+id/email_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/email_activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_shape"
            android:text="发送激活邮件"
            android:textSize="@dimen/main_FontSizeSmall"
            android:visibility="gone" />

    </LinearLayout>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/main_colorAccent"
        android:gravity="start"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="@dimen/main_FontSizeMiddle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_check"
            android:textColor="@android:color/black"
            android:textSize="@dimen/main_FontSizeSmall" />

        <CheckBox
            android:id="@+id/phone_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/phone_activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_shape"
            android:text="发送手机验证码"
            android:textSize="@dimen/main_FontSizeSmall"
            android:visibility="gone" />

        <TextView
            android:id="@+id/code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="验证码"
            android:textColor="@android:color/black"
            android:textSize="@dimen/main_FontSizeSmall"
            android:visibility="gone" />

        <EditText
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:ems="3"
            android:gravity="start"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textSize="@dimen/main_FontSizeSmall"
            android:visibility="gone" />

        <Button
            android:id="@+id/phone_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_shape"
            android:text="确认"
            android:textSize="@dimen/main_FontSizeSmall"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>